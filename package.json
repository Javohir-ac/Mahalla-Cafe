    "build": "npm run build-frontend",
    "start-backend": "cd backend && npm start",
    "start-frontend": "cd frontend && serve -s build",
    "start": "run-p start-backend start-frontend",
    "postinstall": "echo âœ… Dependencies installed! Run 'npm run build' to build frontend and 'npm run start' to launch the full project."
  },
  "dependencies": {
